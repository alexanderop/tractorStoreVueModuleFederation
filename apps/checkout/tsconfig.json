{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "paths": {
      "@/*": ["./src/*"],
      "@tractor/shared": ["../../packages/shared/src"],
      "@tractor/shared/*": ["../../packages/shared/src/*"]
    },
    "noEmit": true
  },
  "references": [
    { "path": "../../packages/shared" }
  ],
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ]
}
