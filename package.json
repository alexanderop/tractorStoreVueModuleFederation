{
  "name": "tractor-store-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "./start.sh",
    "stop": "./stop-all.sh",
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "start:host": "cd apps/host && pnpm dev",
    "start:decide": "cd apps/decide && pnpm dev",
    "start:explore": "cd apps/explore && pnpm dev",
    "start:checkout": "cd apps/checkout && pnpm dev",
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +"
  },
  "dependencies": {
    "@module-federation/enhanced": "0.18.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.1",
    "@module-federation/rsbuild-plugin": "^0.18.3",
    "@rsbuild/core": "1.5.1",
    "@rsbuild/plugin-vue": "^1.0.0",
    "@tsconfig/node22": "^22.0.0",
    "@types/node": "^22.16.5",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.33.0",
    "typescript": "5.8.3",
    "vue-tsc": "^3.0.4"
  },
  "pnpm": {
    "overrides": {
      "vue": "3.5.18",
      "vue-router": "4.5.1"
    }
  }
}
