{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "useDefineForClassFields": true,

    /* modules */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "*": ["./@mf-types/*"]
    },
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,

    /* type checking */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": ["src"]
}
